<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseToolbar">
        <item name="android:elevation">4dp</item>
        <item name="titleTextColor">@color/black</item>
    </style>


    <style name="ToolbarTitleText">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleText">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubtitleText">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ContentText">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SmallText">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="ImageRounded" parent="">
        <item name="cornerSize">50%</item>
    </style>

</resources>